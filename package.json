{
  "name": "api-boilerplate",
  "version": "1.0.0",
  "description": "Simple API boilerplate with express and Ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "dev": "node ./node_modules/nodemon/bin/nodemon.js dist/index.js",
    "builddev": "npm run build && npm run dev",
    "lint": "eslint . --ext .ts",
    "test": "jest '(\\.|/)(test)\\.tsx?$'",
    "test:unit": "jest '(\\.|/)(unit.test)\\.tsx?$'",
    "test:integration": "jest '(\\.|/)(int.test)\\.tsx?$'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Atrato-Pago/api-boilerplate.git"
  },
  "author": "Jose Toscano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Atrato-Pago/api-boilerplate/issues"
  },
  "homepage": "https://github.com/Atrato-Pago/api-boilerplate#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "jest": "^28.0.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "ts-jest": "^28.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1"
  }
}
